# EventPing Environment Configuration Template
# Copy this file to .env and update with your actual values

# ===============================
# Database Configuration
# ===============================
DATABASE_URL=jdbc:postgresql://localhost:5432/eventping_prod
DATABASE_USERNAME=eventping_user
DATABASE_PASSWORD=your_secure_database_password

# ===============================
# Security Configuration
# ===============================
# JWT Secret - Generate a strong random key (minimum 256 bits)
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_256_bits_long

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===============================
# Redis Configuration
# ===============================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ===============================
# Email Configuration
# ===============================
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# ===============================
# SSL Configuration
# ===============================
SSL_KEYSTORE_PATH=/path/to/your/keystore.p12
SSL_KEYSTORE_PASSWORD=your_keystore_password

# ===============================
# Monitoring and Alerting
# ===============================
ALERT_EMAIL=admin@yourdomain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ===============================
# Application URLs
# ===============================
PUBLIC_BASE_URL=https://yourdomain.com/e/

# ===============================
# Spring Profile
# ===============================
SPRING_PROFILES_ACTIVE=prod