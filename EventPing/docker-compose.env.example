# Docker Compose Environment Variables
# Copy this file to docker-compose.env and update with your values

# ===============================
# Application Configuration
# ===============================
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# ===============================
# Database Configuration
# ===============================
POSTGRES_DB=eventping
POSTGRES_USER=eventping_user
POSTGRES_PASSWORD=secure_database_password
DATABASE_URL=jdbc:postgresql://postgres:5432/eventping
DATABASE_USERNAME=eventping_user
DATABASE_PASSWORD=secure_database_password

# ===============================
# Redis Configuration
# ===============================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password

# ===============================
# Security Configuration
# ===============================
JWT_SECRET=your_very_secure_jwt_secret_key_for_production_minimum_256_bits
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===============================
# Email Configuration
# ===============================
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# ===============================
# Monitoring
# ===============================
ALERT_EMAIL=admin@yourdomain.com
PUBLIC_BASE_URL=https://yourdomain.com/e/